# wallpapers for both monitors
output * bg ~/.wallpapers/black_mountain.jpg fill

# virtual monitor layout - hdmi on the left, built in display to the right
output HDMI-A-1 Position 0,0
output eDP-1 Position 2560,0

# bind workspaces to monitors
workspace 1 output HDMI-A-1
workspace 2 output HDMI-A-1
workspace 3 output HDMI-A-1
workspace 4 output HDMI-A-1
workspace 5 output HDMI-A-1
workspace 6 output HDMI-A-1
workspace 7 output HDMI-A-1
workspace 8 output eDP-1
workspace 9 output eDP-1

# touchpad
input * {
    dwt enabled
    tap enabled
    middle_emulation enabled
    natural_scroll enabled
}

# keyboard
input * {
    xkb_layout pl
}

focus_follows_mouse no

# hide the mouse pointer after 3 seconds
seat seat0 hide_cursor 3000
