# Read `man 5 sway` for a complete reference.

set $mod Mod4
set $left h
set $down j
set $up k
set $right l
# set $term foot
set $term alacritty
set $menu fuzzel -I -l 5 | xargs swaymsg exec
set $term2 DONT_SAVE_PATH=true alacritty --class AlacrittyFloating --option font.size=12.0
set $copilot alacritty --class AlacrittyFloating --option font.size=12.0 -e copilot_wrapper.sh

include /etc/sway/config.d/*

exec mako

exec swayidle -w \
    timeout 300 'swaylock -f -c 000000' \
    before-sleep 'swaylock -f -c 000000 -e -i ~/.wallpapers/geo_pattern_even_darker.png'

include ~/.config/sway/config.d/*
include ~/.config/sway/config.d/themes/white
