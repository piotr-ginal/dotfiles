#!/bin/bash

RECORDING_DIR="$HOME/.screenrecordings"
PIDFILE="/tmp/wf-recorder.pid"

mkdir -p "$RECORDING_DIR"

is_recording() {
    if [ -f "$PIDFILE" ]; then
        local pid=$(cat "$PIDFILE")
        if kill -0 "$pid" 2>/dev/null; then
            return 0
        else
            rm -f "$PIDFILE"
            return 1
        fi
    else
        return 1
    fi
}

start_recording() {
    local timestamp=$(date +"%Y%m%d-%H%M%S")
    local filename="recording-${timestamp}.mp4"
    local filepath="$RECORDING_DIR/$filename"
    local output=$(swaymsg -t get_outputs | jq -r '.[] | select(.focused) | .name')

    wf-recorder -f "$filepath" -o "$output" &
    local pid=$!
    echo "$pid" > "$PIDFILE"
}

stop_recording() {
    local pid=$(cat "$PIDFILE")

    kill -INT "$pid" 2>/dev/null

    rm -f "$PIDFILE"
}

if is_recording; then
    stop_recording
    notify-send -t 2000 -u normal "Screen recording finished" "saved to $RECORDING_DIR"
else
    start_recording
    notify-send -t 2000 -u normal "Starting screen recording"
fi
